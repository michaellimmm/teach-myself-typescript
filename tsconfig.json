{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "pretty": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@src/*": ["./*"],
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
